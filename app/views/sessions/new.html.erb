<div class="depot_form">
 <% if flash[:alert] %>
  <p id="notice"><%= flash[:alert] %></p>
  <% end %>
  <%= form_tag do %>
  <fieldset>
  <legend>Login</legend>
  <div class="field">
    <%= label_tag :name %><br>
    <%= text_field_tag :name, params[:name] %>
  </div>
  <div class="field">
    <%= label_tag :password %><br>
    <%= password_field_tag :password, params[:password]%>
  </div>
  
  <div class="actions">
    <%= submit_tag "Login" %>
  </div>
  </fieldset>
<% end %>
</div>